{
  "name": "kadoa-sdks",
  "private": true,
  "scripts": {
    "sync-docs": "bun kadoa-codegen sync-docs",
    "sync-docs:watch": "bun kadoa-codegen sync-docs --watch",
    "sync-docs:check": "bun kadoa-codegen sync-docs --check",
    "sync-docs:unused": "bun kadoa-codegen sync-docs --unused",
    "sync-docs:untagged": "bun kadoa-codegen sync-docs --untagged",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "build": "turbo run build",
    "build:sdks": "turbo run build --filter='./sdks/*'",
    "dev": "turbo run dev --parallel",
    "dev:node": "turbo run dev --filter='@kadoa/node-sdk' --filter='@kadoa/node-examples' --parallel",
    "dev:node-sdk": "cd sdks/node && bun run dev:watch",
    "dev:node-examples": "cd examples/node-examples && bun run dev:hot",
    "kadoa-codegen": "bun run ./tools/codegen/src/cli.ts",
    "audit": "turbo run audit",
    "audit:fix": "turbo run audit:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "sdks/*",
    "packages/*",
    "examples/*",
    "tools/*"
  ]
}
